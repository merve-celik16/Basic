
@{
    ViewData["Title"] = "Index";
}

@model Basic.Models.CustomerViewModel

<!DOCTYPE html>
<html>
<head>
    <title>Müşteri Detayları</title>
</head>
<body>
    <h1>Müşteri Detayları</h1>
    <p><strong>Id:</strong> @Model.Customer.Id</p>
    <p><strong>First Name:</strong> @Model.Customer.FirstName</p>
    <p><strong>Last Name:</strong> @Model.Customer.LastName</p>
    <p><strong>Email:</strong> @Model.Customer.Email</p>

    <table>
        <tr>
            <th>Id:</th>
            <th>ProductName:</th>
            <th>Price:</th>
            <th>Quantity:</th>
           
        </tr>
        @foreach (var order in Model.Orders)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.ProductName</td>
                <td>@order.Price</td>
                <td>@order.Quantity</td>
               
            </tr>
        }
    </table>
</body>
</html>
